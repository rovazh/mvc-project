<!doctype html>
<html lang="en">
  <%- include('partials/head.ejs')%>
    <body>
      <%- include('partials/header.ejs')%>
      <div class="w-25 position-absolute top-50 start-50 translate-middle text-center">
        <h1>Edit book</h1>
        <form action="/book/edit", method="POST">
          <input type="hidden" value="<%= book.id %>" name="bookId">
          <input class="form-control mb-1" placeholder="Title" type="text" name="title" value="<%= book.title %>">
          <input class="form-control mb-1" placeholder="Published" type="date" name="publishedAt" value="<%= book.publishedAt %>">
          <select class="form-select mb-1" aria-label="Default select example" name="authorId">
            <% authors.forEach(function(author) { %>
              <% if (author.id === book.authorId) { %>
              <option value="<%= author.id %>" selected><%= author.name %></option>
              <% } else { %>
              <option value="<%= author.id %>"><%= author.name %></option>
              <% } %>
            <% }); %>
          </select>
          <input class="btn btn-secondary w-100" type="submit" value="Add">
        </form>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
