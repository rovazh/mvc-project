<!doctype html>
<html lang="en">
  <%- include('partials/head.ejs')%>
    <body>
      <%- include('partials/header.ejs')%>
      <div class="position-absolute start-50 text-center" style="top: 150px; width: 1000px; margin-left: -500px;">
        <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Published</th>
              <th>Author</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(function(book) { %>
            <tr>
              <td><%= book.id %></td>
              <td><%= book.title %></td>
              <td><%= book.publishedAt %></td>
              <td><%= authors.find(author => author.id === book.authorId).name %></td>
              <td>
                <form class="d-inline-block" method="POST", action="/book/delete">
                  <input type="hidden" value="<%= book.id %>" name="bookId">
                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
                <form class="d-inline-block" method="GET", action="/book/edit">
                  <input type="hidden" value="<%= book.id %>" name="bookId">
                  <button class="btn btn-warning btn-sm" type="submit">Edit</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
