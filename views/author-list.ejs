<!doctype html>
<html lang="en">
  <%- include('partials/head.ejs')%>
    <body>
      <%- include('partials/header.ejs')%>
      <div class="position-absolute start-50 text-center" style="top: 150px; width: 800px; margin-left: -400px;">
        <h1>Authors</h1>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% authors.forEach(function(author) { %>
            <tr>
              <td><%= author.id %></td>
              <td><%= author.name %></td>
              <td>
                <form class="d-inline-block" method="POST", action="/author/delete">
                  <input type="hidden" value="<%= author.id %>" name="authorId">
                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
                <form class="d-inline-block" method="GET", action="/author/edit">
                  <input type="hidden" value="<%= author.id %>" name="authorId">
                  <button class="btn btn-warning btn-sm" type="submit">Edit</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
